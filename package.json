{
  "name": "cursor-claude",
  "displayName": "Cursor Claude Extension",
  "description": "Claude integration for Cursor",
  "version": "1.0.0",
  "publisher": "cursor-claude-publisher",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "claude",
    "ai",
    "cursor"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorClaude.activate",
        "title": "Activate Claude"
      },
      {
        "command": "cursorClaude.focusInput",
        "title": "Focus Claude Code Input"
      }
    ],
    "keybindings": [
      {
        "command": "cursorClaude.focusInput",
        "key": "cmd+b cmd+y",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Cursor Claude",
      "properties": {
        "cursorClaude.autoOpenClaudeCode": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open Claude Code when Cursor starts"
        },
        "cursorClaude.dangerousMode": {
          "type": "boolean",
          "default": false,
          "description": "Run Claude Code with --yes flag to automatically accept all changes (dangerous!)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build-prod",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-prod": "npm run compile && npm run webpack && npm run copy-assets",
    "webpack": "webpack --config webpack.config.js",
    "copy-assets": "echo 'No assets to copy - using webpack bundle'",
    "package": "npm run build-prod && vsce package",
    "package-private": "npm run build-prod && vsce package --allow-star-activation --allow-missing-repository",
    "install-extension": "npm run package && cursor --install-extension cursor-claude-1.0.0.vsix",
    "deploy-local": "./scripts/deploy-local.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src test --ext .ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/vsce": "^3.6.0",
    "eslint": "^8.56.0",
    "javascript-obfuscator": "^4.1.1",
    "jest": "^29.7.0",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.1.2",
    "typescript": "^4.9.5",
    "webpack": "^5.101.2",
    "webpack-cli": "^6.0.1",
    "webpack-obfuscator": "^3.5.1"
  }
}
